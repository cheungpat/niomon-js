{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "es5",
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
}
